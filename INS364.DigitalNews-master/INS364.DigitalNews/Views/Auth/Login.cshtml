@using INS364.DigitalNews.ViewModels.Auth
@model LoginViewModel

@{
    ViewData["Title"] = "Inicio de sesión";
    var returnUrl = @Context.Request.Query["returnurl"];

}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
    </style>
</head>
<body>
    <center>
        <h1>Iniciar sesión</h1>
    </center>
    <br />
    <form method="get" id="loginForm" asp-controller="Auth" asp-action="AuthenticateUser" asp-route-returnurl="@returnUrl">
        <div class="form-group">
            <label>Nombre de usuario: </label>
            @Html.TextBoxFor(model => model.Username, htmlAttributes: new { maxlength = 64, @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Password, string.Empty, htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label>Contraseña: </label>
            @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control", type = "password", maxlength = 64 })
            @Html.ValidationMessageFor(model => model.Password, string.Empty, htmlAttributes: new { @class = "text-danger" })
        </div>
        <br />
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Iniciar sesión</button>
        </div>

        @if (ViewBag.Valid == false)
        {
            <p class="alert alert-danger">Sus credenciales son invalidos. Verifique sus datos e intente de nuevo.</p>
        }
    </form>
</body>
</html>